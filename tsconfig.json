{
  "compilerOptions": {
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "strict": true,

    "noUnusedParameters": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "importHelpers": true,
    "target": "es5",

    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "types": ["node"]
  },
  "include": [],
  "files": ["src/hear-ye.ts", "src/ui/hear-ye-ui-api.ts"]
}
